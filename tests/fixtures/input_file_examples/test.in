JOBSUB

#!/bin/bash
#SBATCH -N 1
#SBATCH -t 12:00:00
#SBATCH --ntasks-per-node=64
#SBATCH --partition=genoa
#SBATCH --output=%job.stdout
#SBATCH --error=%job.stdout

echo "== Starting run at $(date)"
