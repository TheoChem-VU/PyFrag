JOBSUB

#!/bin/bash
#SBATCH -N 1
#SBATCH -t 12:00:00
#SBATCH --ntasks-per-node=32
#SBATCH --partition=tc

echo "== Starting run at $(date)"
echo "== Job ID: ${SLURM_JOBID}"
echo "== Node list: ${SLURM_NODELIST}"
echo "== Submit dir. : ${SLURM_SUBMIT_DIR}"
echo "== Scratch dir. : ${TMPDIR}"

# TC
module load shared
module load ams/2025.103
export SCM_TMPDIR="/scratch/${SLURM_JOBID}"
srun mkdir -p ${SCM_TMPDIR}
srun chmod 733 ${SCM_TMPDIR}

# Snellius
# module load 2022
# module load AMS/2023.101-intelmpi
# module list

[postamble]
srun rm -rf ${SCM_TMPDIR}

JOBSUB END

PyFrag
coordfile $SLURM_SUBMIT_DIR/*xyz
frag1_indices  1 # Put here the atom indices of the first fragment (start with 1)
frag2_indices  2-58 # Put here the atom indices of the second fragment (start with 1)
frag1_energy   -287.98 # Put here the (optimized) energy of the first fragment (in kcal/mol)
frag2_energy   -9773.63 # Put here the (optimized) energy of the second fragment (in kcal/mol)
bondlength 1 42  0.000
PyFrag END

fragment1 EXTRA

System
  Charge 1.0
End

Engine ADF

  Unrestricted yes
  SpinPolarization 0.0

  IrrepOccupations
    A1 0 // 0
    A2 0 // 0
    B1 0 // 0
    B2 0 // 0
  End

EndEngine

fragment1 EXTRA END

fragment2 EXTRA

System
  Charge 282
End

Engine ADF

  Unrestricted yes
  SpinPolarization 0.0

  IrrepOccupations
    A1 0 // 0
    A2 0 // 0
    B1 0 // 0
    B2 0 // 0
  End

EndEngine

fragment2 EXTRA END


complex EXTRA

System
  Charge 283
End

Engine ADF

  Unrestricted Yes
  Spinpolarization 0.0
  unrestrictedfragments

  IrrepOccupations
    A1 0 // 0
    A2 0 // 0
    B1 0 // 0
    B2 0 // 0
  End

EndEngine

complex EXTRA END

AMS
Task SinglePoint

Engine ADF
  basis
    core None
    type TZP
  End

  numericalquality Good

  xc
    GGA PBE
    DISPERSION GRIMME3 BJDAMP
  End

  Symmetry C(2V)

  SCF
     ITERATIONS 999
  END

EndEngine

AMS END
