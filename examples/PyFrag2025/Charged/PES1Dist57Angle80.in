JOBSUB

#!/bin/bash
#SBATCH -N 1
#SBATCH -t 12:00:00
#SBATCH --ntasks-per-node=32
#SBATCH --partition=tc
#SBATCH --output=%job.stdout
#SBATCH --error=%job.stdout

echo "== Starting run at $(date)"
echo "== Job ID: ${SLURM_JOBID}"
echo "== Node list: ${SLURM_NODELIST}"
echo "== Submit dir. : ${SLURM_SUBMIT_DIR}"
echo "== Scratch dir. : ${TMPDIR}"

# module load 2022
# module load AMS/2023.101-intelmpi
# module list

JOBSUB END

PyFrag

coordfile PES1normdist57ang80.amv
frag1_indices  1-10 # Put here the atom indices of the first fragment (start with 1)
frag2_indices  11 12 # Put here the atom indices of the second fragment (start with 1)
frag1_energy   0 # Put here the optimized energy of the first fragment (in kcal/mol)
frag2_energy   0 # Put here the optimized energy of the second fragment (in kcal/mol)
bondlength 11 5
bondlength 12 5
log_level debug

PyFrag END

AMS
Task SinglePoint
Engine ADF
  XC
    GGA OLYP
  END
  NumericalQuality normal
  BASIS
    TYPE DZP
    CORE None
  END

EndEngine
AMS END

fragment1 EXTRA
System
  Charge 0
End
fragment1 EXTRA END

fragment2 EXTRA
System
  Charge -1
End
fragment2 EXTRA END

complex EXTRA
System
  Charge -1
End
complex EXTRA END
