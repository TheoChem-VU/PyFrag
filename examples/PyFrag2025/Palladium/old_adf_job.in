##### Uses the ADF2019 inputfile format (indicated by the ADF and ADF END keys)
##### Gets converted to a >AMS2019 type of inputfile #####
##### You must load the ams (>2019) module

JOBSUB

#!/bin/bash
#SBATCH -N 1
#SBATCH -t 12:00:00
#SBATCH --ntasks-per-node=32
#SBATCH --partition=tc
#SBATCH --output=old_adf_job.out
#SBATCH --error=old_adf_job.err

# module load shared
# module load ams/2024.102

JOBSUB END


PyFrag
name old_ams_job
coordfile *.xyz
frag1_indices  2
frag2_indices  1 3-6
frag1_energy   0
frag2_energy  -554.09

bondlength 1 6  1.09
bondlength 1 3  0.00
bondlength 1 5  0.00

angle 1 4 5  0.00
angle 1 3 4 0.00
angle 1 2 3 0.00

log_level debug

PyFrag END

ADF

basis
type TZ2P
core Small
end

xc
gga OPBE
end

relativistic SCALAR ZORA

scf
iterations 299
converge 0.00001
mixing 0.20
end

numericalquality normal

charge 0 0
symmetry auto

ADF END
