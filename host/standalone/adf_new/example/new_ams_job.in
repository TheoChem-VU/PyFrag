##### Uses the  >AMS2019 inputfile format (indicated by the AMS and AMS END keys)
##### You must load the ams (>2019) module

JOBSUB

#!/bin/bash
#SBATCH -N 1
#SBATCH -t 12:00:00
#SBATCH --ntasks-per-node=32
#SBATCH --partition=tc
#SBATCH --output=new_ams_job.out
#SBATCH --error=new_ams_job.err

module load ams/2022.101

JOBSUB END


PyFrag
name new_ams_job
ircpath $SLURM_SUBMIT_DIR/*xyz
fragment  2
fragment  1 3 4 5 6
strain    0
strain   -554.09
bondlength 1 6  1.09

PyFrag END

AMS

Task SinglePoint

Engine adf
  basis
    core Small
    type TZ2P
  End

  eprint
    sfo EIG OVL
  End

  numericalquality VeryGood

  xc
    gga OPBE
  End
EndEngine

AMS END
