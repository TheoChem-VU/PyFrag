##### Uses the  >AMS2019 inputfile format (indicated by the AMS and AMS END keys)
##### You must load the ams (>2019) module

# JOBSUB

#!/bin/bash
#SBATCH -N 1
#SBATCH -t 00:10:00
#SBATCH --ntasks-per-node=16
#SBATCH --partition=genoa
#SBATCH --output=new_ams_job.out
#SBATCH --error=new_ams_job.err

# TC
# module load ams/2023.101

# Snellius
# module load 2022
# module load AMS/2023.101-intelmpi
# module list

# JOBSUB END


PyFrag
name symmetry_job
coordfile *.xyz
fragment  1 2 3 4
fragment  5 6 7
strain   -194.83
strain   -317.86
bondlength 1 4  0.00
log_level debug

VDD 1 2 3 4 5 6 7
overlap frag1 HOMO frag2 LUMO
overlap frag2 HOMO frag1 LUMO

orbitalenergy frag1 HOMO
orbitalenergy frag2 LUMO
orbitalenergy frag1 LUMO
orbitalenergy frag2 HOMO

population frag1 HOMO
population frag2 LUMO
population frag1 LUMO
population frag2 HOMO

PyFrag END

fragment1 EXTRA
System
  charge 1
End
fragment1 EXTRA END

fragment2 EXTRA
System
  charge 0
End
fragment2 EXTRA END

complex EXTRA
System
  charge 1
End
complex EXTRA END

AMS

Task SinglePoint

Engine adf
  basis
    core None
    type DZP
  End

#  eprint
#    sfo EIG OVL
#  End

  numericalquality normal

  xc
    gga OPBE
  End

  Symmetry C(S)
EndEngine

AMS END
